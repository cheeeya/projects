<!DOCTYPE html>
<html>
  <head>
    <title>GoalApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <% if logged_in? %>
        <%= button_to 'Logout', session_url, method: 'delete' %>
      <% else %>
        <%= button_to 'Sign Up!', new_user_url, method: 'get' %>
        <%= link_to 'Log in!', new_session_url %>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
